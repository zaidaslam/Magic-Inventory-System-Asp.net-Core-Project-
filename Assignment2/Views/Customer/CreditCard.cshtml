@{
    ViewData["Title"] = "CreditCard";
}

<h2>Credit Card</h2>


    <h3>Enter Your Credit Card Details</h3><br>

<form method="post" asp-action="OrderConfirmation">
            <p>
           <div class="row">
           <div class="col-md-4">
           <div class="form-group">
           Enter Credit Card Number: <input name="creditCard" type="number"  min="1" value="@ViewBag.check" required /><br>
               <h4>@ViewBag.Message</h4>
                        </div>
                    </div>
                </div>
                <input type="submit" value="Pay" class="btn btn-default" />
            </p>
        </form>

    

