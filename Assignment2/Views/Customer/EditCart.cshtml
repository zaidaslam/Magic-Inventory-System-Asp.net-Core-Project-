@model Assignment2.Models.Cart

@{
    ViewData["Title"] = "EditCart";
}

<h2>EditCart</h2>




<h4>StoreInventory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCart" asp-route-id="@ViewBag.ProductID" asp-route-store="@ViewBag.StoreID">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label>Product Name :</label>
            <label>@ViewBag.ProductName</label><br>
            <label>Store Name :</label>
            <label>@ViewBag.StoreName</label><br>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
